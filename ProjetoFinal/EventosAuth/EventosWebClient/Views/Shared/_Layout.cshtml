<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - EventosWebClient</title>

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/EventosWebClient.styles.css" asp-append-version="true" />

	<style>


		footer {
			padding: 1rem 0;
			background-color: #343a40;
			color: #fff;
			text-align: center;
			position: relative; /* não fixa mais, ocupa espaço normal */
		}

		.navbar-brand {
			font-weight: bold;
			font-size: 1.5rem;
		}

		.navbar {
			box-shadow: 0 2px 6px rgba(0,0,0,0.1);
		}

		main.container {
			margin-top: 2rem;
			margin-bottom: 2rem;
		}

		html, body {
			height: 100%;
		}

		body {
			display: flex;
			flex-direction: column;
			margin: 0;
		}

		main {
			flex: 1 0 auto; /* ocupa o espaço restante */
		}

		footer {
			flex-shrink: 0;
		}

	</style>
</head>
<body>

	@{
		var user = Context.Session.GetUserSession();
	}

	<!-- Navbar moderna -->
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Portal de Eventos</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarContent">
					<ul class="navbar-nav ms-auto">
						@if (user is not null)
						{
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Perfil">Meu Perfil</a>
							</li>
						}
						else
						{
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Login">Login</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<!-- Conteúdo principal -->
	<main role="main" class="container pt-5">
		@RenderBody()
	</main>

	<!-- Footer -->
	<footer>
		&copy; 2025 - EventosWebClient
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
